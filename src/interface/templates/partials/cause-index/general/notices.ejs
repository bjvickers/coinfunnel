<div class="tab-pane fade" id="list-notices" role="tabpanel" aria-labelledby="list-notices-list">
    
  <div class="card">
    <div class="card-header">
      <i class="far fa-envelope"></i>
      Notices
    </div>
    <div class="card-body">

      <% if (locals.notices.length) { %>
        <table class="table">
          <tbody>
            <% locals.notices.forEach((notice) => { %>
              <tr>
                <td class="col-4 notice-date" data-notice-id="<%= notice.id %>"><%= inject.dateLibrary.formatShort(notice.dateAdded) %></td>
                
                <td class="col-6">
                  <a href="#notice-collapse-<%= notice.id %>"
                    class="notice-subject <% if (notice.isRead) { %>old-notice<% } else { %>new-notice font-weight-bold<% } %>"
                    data-notice-id="<%= notice.id %>"><%= notice.subject %></a>
                </td>

                <td class="col-2 text-center">
                  <a class="delete-notice" data-notice-id="<%= notice.id %>" href="#">Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <% for (let i = 0; i < locals.notices.length; i++) { %>
          <div class="d-none" id="notice-collapse-<%= locals.notices[i].id %>"><%= locals.notices[i].content %></div>
        <% } %>

        <div id="notice-display" class="d-none card card-body"></div>

      <% } else { %>
        <div class="text-center">
          No new notices
        </div>
      <% } %>
    </div>
  </div>

</div>
