<main role="main">

  <section style="background-color: #252638;">
    <div class="container">
      <div class="d-flex justify-content-center">
        <div style="padding-top: 14em; padding-bottom: 9em;">
          <h1 style="font-size: 3.5em; color: white;">
            <%= inject.seoLibrary.getRouteTitle(locals.pageACL.resource) %>
          </h1>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <div class="row">

          <div class="col-sm text-center pt-4 pb-4">
            <span style="font-size:2em;"><%= locals.noOfCausesOnline %></span>
            <br>
            <span>charities online</span>
          </div>

          <div class="col-sm text-center pt-4 pb-4">
            <span style="font-size:2em;" id="no-of-all-system-online-contribs"><%= locals.sumTotalMiners %></span>
            <br>
            <span>mining volunteers</span>
          </div>

          <div class="col-sm text-center pt-4 pb-4">
            <span style="font-size:2em;" id="">
              <%= inject.currencyLibrary.getDefaultCurrencySymbol() + inject.currencyLibrary.getMoneroToDefaultCurrency(locals.sumTotalPayouts, false) %>
            </span>
            <br>
            <span>raised for charity</span>
          </div>

        </div>
      </div>
    </div>
  </section>

  <section style="padding-top: 6em; padding-bottom: 6em;" class="px-2 bg-secondary">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 mx-auto">
          <h3 class="h2-styles">What is CoinFunnel?</h3>
          <p class="lead">
            CoinFunnel is a service which allows people to voluntarily mine cryptocurrency for
            their favourite charities. Any charity can freely sign up and be listed on this site. 
            Anyone can be a volunteer miner (no need to sign up), all you need is a computer.
            Prospective volunteers can search the charities list, find one which appeals, then download the free, 
            open-source mining application to generate cryptocurrency for that charity.
          </p>
        </div>
      </div>
    </div>
  </section>

  <% if (locals.recentCauses.length === 3) { %>
    <section style="border-top: 1px solid darkgray; padding-top: 6em; padding-bottom: 6em;" class="bg-secondary">
      <div class="container">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <h3 class="h2-styles">Recent charities</h3>
  
              <div class="row">
                <% locals.recentCauses.forEach((cause) => { %>
                  <div class="col-sm text-center p-4 lead mt-1 mx-1" style="border: 1px solid darkgray;">
                    <image src="<%= cause.getPrimaryImage() %>" alt="thumnail" class="img-thumbnail" />
                    <br>
                    <strong><%= cause.name %></strong>
                    <br>
                    <%= cause.country %>
                    <br>
                    <br>
                    <%= cause.getTruncatedDesc(80) %>
                    <a href="<%= `${inject.ACL.GetShowcase.resource}/${cause.path.getCombinedPath()}` %>">more</a>
                  </div>
                <% }) %>
              </div>
  
          </div>
        </div>
      </div>
    </section>
    <% } %>

